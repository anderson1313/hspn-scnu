	/*records*/
.scroll-view_H {
		box-sizing: border-box;
		white-space: nowrap;
		height: 450rpx;
		width: 98%;
		margin: 0 auto;
		padding: 20rpx 0;
}
.scroll-view-item_H {
		margin-top: 40rpx;
		display: inline-block;
		width: 250rpx;
		box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
		height: 300rpx;
		background: rgba(255, 255, 255, 1.0);
		border-radius: 10rpx;
		text-align: center;
		font-size: 30rpx;
		margin: 0 30rpx;
		overflow: hidden;
		margin-top: 30rpx;
}
.scroll-view-item_H .up {
		display: flex;
		flex-direction: row;

		align-items: center;
		height: 50%;
		width: 100%;
}
.scroll-view-item_H .up .name {
		width: 20%;
		margin: 0 50rpx;
		font-size: 38rpx;
		font-weight: bold;
}
.scroll-view-item_H .up .icon {
		width: 30%;
		font-size: 40rpx;
		color: #007AFF;
}
.scroll-view-item_H .down {
		margin: 0 auto;
		font-size: 27rpx;
		text-align: left;
		color: rgba(164, 176, 190, 1.0);

		overflow: hidden;
		width: 70%;
		white-space: pre-wrap;
		height: 50%;
}
button {
		padding: 0;
		margin: 0;
		border-radius: 0;
		line-height: 48rpx;
		text-align: left;
}
button::after {
		border: none;
}
.tips {
		width: 80% !important;
		margin: 20rpx auto;
		padding-bottom: 30rpx;
}
.tips .tip {
		height: 48rpx;
		margin-bottom: 40rpx !important;
		font-size: 35rpx;
		background: none !important;
		border: none !important;
		color: rgba(164, 176, 190, 1.0);
}
._i {
		display: inline-block;
		margin-right: 25rpx;
		font-size: 35rpx;
}
.icon-shouye,
	.icon-yijianfankui {
		font-weight: bold;
